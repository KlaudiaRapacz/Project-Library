@model IEnumerable<Category>

@{
    ViewData["Title"] = "Lista Kategorii";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary float-right mx-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-outline-info float-right mx-1" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a>
                            <a class="btn btn-danger text-white float-right mx-1" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateButton", "Category") 